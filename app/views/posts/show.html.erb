<!-- ancestors leading to this node -->
<%= nested_adventures @adventure.subtree.arrange(:order => :created_at) %>
<% unless @post.nil? %>
  <%= render 'choice_submissions' %>
<% end %>

<!-- unless choices have been selected. when the choices have been selected, set @no_choice to false -->
<% unless false %>
  <%= render 'add_choice' %>
<% else %>
  <% unless @post.nil? %>
    <%= render 'story_submissions' %>
  <% end %>
  <%= render 'add_choice' %>
<% end %>
