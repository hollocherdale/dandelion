<%= form_for @adventure, remote: true do |f| %>
  <% if @adventure.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@adventure.errors.count, "error") %> prohibited this adventure from being saved:</h2>
      <ul>
      <% @adventure.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= select(:adventure, :path_limit, [['Dead End', 1], ['Single', 2]]) %>
  <%= f.hidden_field :parent_id, :value => params[:id] %>
  <%= f.label :path %>
  <small>140 Characters max</small>
  <%= f.text_area :choice, :placeholder => "What path will lead to your story?", :required => true %>
  <%= f.label :story %><br>
  <%= f.text_area :story, :placeholder => "Your story", :required => true %>
  <div class="actions">
    <%= f.submit "Post", data: { disable_with: 'Posting...' }%>
  </div>
<% end %>