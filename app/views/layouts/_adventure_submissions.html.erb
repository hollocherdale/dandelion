<% @choices.each do |post| %>
	<%= post.choice %>
<% end %>

<%= form_for @post do |f| %>
  <%= f.hidden_field :user_id %><br />
  <%= f.hidden_field :adventure_id, :value => @adventure[:id] %><br />
  <%= f.label :choice %><br />
  <%= f.text_area :choice %><br />
  <%= f.submit "Submit this choice" %>
<% end %>

