<% unless @adventure.posts.nil?%>
	<% @adventure.posts.each do |post| %>
		<%= post.choice %>
		<%if current_user.admin? %>
			<%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }  %>
		<% end %>
	<% end %>
<% end %>

<%= form_for(@post) do |f| %>
	<%= f.hidden_field :user_id %><br />
	<%= f.hidden_field :adventure_id, :value => @adventure[:id] %><br />
	<%= f.label :choice %><br />
	<%= f.text_area :choice %><br />
	<%= f.submit "Submit this choice" %>
<% end %>

