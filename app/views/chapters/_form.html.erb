<%= form_for @chapter, remote: true do |f| %>
  <% if @chapter.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@chapter.errors.count, "error") %> prohibited this chapter from being saved:</h2>
      <ul>
      <% @chapter.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.hidden_field :book_id, value: params[:book_id] %>
  <%= f.hidden_field :parent_id, value: params[:id] %>
  <%= f.label :path %>
  <small>140 characters max </small>
  <%= f.text_area :choice, :placeholder => "What path will lead to your story?", :required => true %>
  <%= f.label :story %><br>
  <%= f.text_area :story, :placeholder => "Your story", :required => true %>
  <div class="actions">
    <%= f.submit "Post", data: { disable_with: 'Posting...' }%>
  </div>
<% end %>