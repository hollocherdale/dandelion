<div class='row'>
  <div class='small-12 columns'>
    <p>
      <strong>Dandelion is in alpha realease. All information submitted here should be considered public. To contribute, visit <a href='https://github.com/hollocherDale/dandelion'>the github page</a></strong>
    </p>
    <p>
      Since this is the alpha release, the database may be reset at any time. You have been warned!
    </p>
    <% @books.each do |book| %>
      <div class='row'>
        <div class='small-12 columns'>
          <h3><%= book.title %></h3>
          <%= book.banner %>
          <%if current_user.admin? || current_user.id == book.user_id %>
             <%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </div>
      </div>
    <% end %>
    <% unless @top_submissions.blank? %>
      <h3>Submissions</h3>
      <% @top_submissions.each do |chapter| %>
        <div class='row'>
          <%= render 'chapters/summary', chapter: chapter %>
        </div>
      <% end %>
    <% end %>
    <% unless @unpopulated_chapters.blank? %>
      <h3>Unpopulated Stories</h3>
      <% @unpopulated_chapters.each do |chapter| %>
        <div class='row'>
          <%= render 'chapters/summary', chapter: chapter %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>